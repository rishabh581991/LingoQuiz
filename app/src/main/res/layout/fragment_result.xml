<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.ResultFragment"
        android:background="@drawable/gradient_background">

        <TextView
            android:id="@+id/result_textview"
            android:layout_alignParentStart="true"
            android:layout_margin="50dp"
            android:layout_width="match_parent"
            android:layout_below="@+id/result_imageview"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            tools:text="PASS"
            android:textSize="52sp"
            android:layout_above="@+id/activity_main_startGame_button"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/colorPass" />

        <ImageView
            android:id="@+id/result_imageview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/ic_trophy"
            android:layout_marginTop="120dp"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/activity_main_startGame_button"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="@string/go_home"
            android:fontFamily="sans-serif-black"
            android:paddingStart="50dp"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryDark"
            android:paddingEnd="50dp"
            android:textSize="32sp"
            android:layout_marginBottom="100dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/button_background"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
</layout>