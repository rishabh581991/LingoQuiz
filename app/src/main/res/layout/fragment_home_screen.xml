<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.HomeScreenFragment"
        android:background="@drawable/gradient_background">

        <TextView
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_below="@+id/fragment_login_logo_imageView"
            android:textAlignment="center"
            android:layout_marginBottom="30dp"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="62sp"
            android:layout_above="@+id/fragment_homescreen_startGame_button"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/colorAccent" />

        <ImageView
            android:id="@+id/fragment_login_logo_imageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/ic_translate"
            android:tint="@color/colorAccent"
            android:layout_marginTop="120dp"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/fragment_homescreen_startGame_button"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="@string/start_game"
            android:fontFamily="sans-serif-black"
            android:paddingStart="50dp"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryDark"
            android:paddingEnd="50dp"
            android:textSize="32sp"
            android:layout_marginBottom="100dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/button_background"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
</layout>